<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_height="match_parent"
    android:paddingLeft="10dp" android:paddingRight="10dp"
    android:background="#fff" android:layout_width="300dp"
    android:paddingTop="10dp"
    android:theme="@style/AppTheme.Date"
    android:weightSum="1">

    <EditText android:layout_height="wrap_content" android:id="@+id/txtNGO"
        android:layout_width="match_parent"
        android:hint="Name of NGO"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_margin="3dp"></EditText>
    <EditText android:layout_height="wrap_content" android:id="@+id/txtAdmin"
        android:layout_width="match_parent"
        android:hint="Administrator Name"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_margin="3dp"></EditText>

    <EditText android:layout_height="wrap_content" android:id="@+id/txtPurpose"
        android:layout_width="match_parent"
        android:hint="Purpose of this organization"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_margin="3dp"></EditText>

    <EditText android:layout_height="wrap_content" android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:hint="Information about this NGO"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_margin="3dp"></EditText>
    <EditText android:layout_height="wrap_content" android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:hint="Username"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_margin="3dp"></EditText>
    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:hint="Password"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_margin="3dp"></EditText>

    <TextView
        android:text="Upload NGO Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="18sp"
        android:layout_margin="3dp" />

    <ImageView
        android:layout_height="70dp"
        app:srcCompat="@drawable/camera"
        android:id="@+id/imageView10"
        android:layout_weight="0.15"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:layout_width="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="10dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="Start a new NGO"
            android:textColor="#fff"
            android:layout_weight="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="Cancel"
            android:textColor="#fff"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>