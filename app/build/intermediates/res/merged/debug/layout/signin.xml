<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/tree"
            android:id="@+id/imageView2"
            android:layout_height="200dp" />

        <TextView
            android:text="Envirinsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:text="User Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/an_textview"
        android:textSize="16sp"
        android:textColor="@color/pb_grey"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/username"
        android:padding="11dp"
        android:background="@drawable/layout_bg"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16sp"
        android:elevation="7dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pass_textview"
        android:textSize="16sp"
        android:textColor="@color/pb_grey"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:padding="11dp"
        android:background="@drawable/layout_bg"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16sp"
        android:elevation="7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signinbut"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Login"
        android:elevation="7dp"
        android:background="@drawable/button_bg"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp" />

    <TextView android:id="@+id/signupbut"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:text="No account yet? Create one"
        android:gravity="center"
        android:textSize="16dip"
        android:textColor="@color/pb_grey"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp" />


</LinearLayout>
