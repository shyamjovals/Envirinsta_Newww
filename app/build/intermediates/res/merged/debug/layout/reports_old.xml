<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <!--<include layout="@layout/toolbar" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_light_disabled">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner"
                    app:ms_dropdown_max_height="400dp"
                    app:ms_dropdown_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_bg_2" />


                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner2"
                    app:ms_dropdown_max_height="400dp"
                    app:ms_dropdown_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_bg_2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/fab2"
                        android:layout_toStartOf="@+id/fab2"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/from_date"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textColor="#111"
                        android:elevation="4dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="casual"
                        android:textAllCaps="false"
                        android:textStyle="normal|italic"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/layout_bg_2"
                        android:hint="From"
                        android:layout_width="95dp"
                        android:padding="2dp" />

                    <ImageView
                        app:srcCompat="@drawable/arrow"
                        android:id="@+id/imageView13"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/fab2"
                        android:layout_toEndOf="@+id/fab2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:id="@+id/to_date"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:padding="2dp"
                        android:textColor="#111"
                        android:elevation="4dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:textStyle="normal|italic"
                        android:fontFamily="casual"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/layout_bg_2"
                        android:hint="To"
                        android:layout_width="95dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_menu_today"
                        android:id="@+id/fab2"
                        android:layout_weight="1"
                        app:backgroundTint="@color/colorButtonCompleteState"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        app:fabSize="mini"
                        app:elevation="6dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp" />

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:elevation="5dp"
                    android:background="@drawable/layout_bg_2"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp">
                </SearchView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp" />

                <com.nihaskalam.progressbuttonlibrary.CircularProgressButton
                    android:id="@+id/circularButton2"
                    android:layout_height="wrap_content"
                    android:onClick="onClickSecondBtn"
                    android:textColor="@color/colorButtonCompleteState"
                    android:textSize="14sp"
                    app:pb_colorIndicator="@color/colorButtonCompleteState"
                    app:pb_cornerRadius="48dp"
                    app:pb_iconCancel="@drawable/ic_action_cross"
                    app:pb_iconComplete="@drawable/ic_action_accept"
                    app:pb_iconError="@drawable/ic_action_cancel"
                    app:pb_selectorCancel="@color/pb_red"
                    app:pb_selectorComplete="@color/colorButtonCompleteState"
                    app:pb_selectorError="@color/primary"
                    app:pb_selectorIdle="@color/primary"
                    app:pb_textColorAfterClick="@color/colorWhite"
                    app:pb_textIdle="Fetch Results"
                    android:layout_weight="0.6"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button" />

                <Button
                    android:text="Generate PDF"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rep"
                    android:layout_toEndOf="@+id/circularButton2"
                    android:padding="2dp"
                    android:background="@drawable/button_bg"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#fff" />

                <!--<ScrollView-->
                    <!--android:id="@+id/scrollViewFilter"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:visibility="gone">-->

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="vertical">-->


                        <!--<com.example.hariharsudan.baycare.Authentication_Pages.FlowLayout-->
                            <!--android:id="@+id/flowLayout"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="start|top"-->

                            <!--android:minHeight="50dp"></com.example.hariharsudan.baycare.Authentication_Pages.FlowLayout>-->
                    <!--</LinearLayout>-->

                <!--</ScrollView>-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewB"
                android:layout_width="match_parent"
                android:layout_weight="0.4"
                android:background="#f3eff5"
                android:orientation="vertical"
                android:layout_height="500dp"
                android:elevation="5dp"
                >

                <include layout="@layout/tab_layout2"></include>
            </LinearLayout>

        </LinearLayout>


</LinearLayout>

</ScrollView>